{
    "twitter": {
        "extendedMode": true
    },
    "tweetwall": {
        "query": "#vdz18 OR #voxxed OR #java",
        "title": "The JavaFX Tweetwall for Voxxed Days ZÃ¼rich 2018!",
        "stylesheetResource": "tweetwall.css"
    },
    "stepEngine": {
        "steps": [
            {
                "stepClassName": "org.tweetwallfx.vdz.steps.FlipInTweets"
            },
            {
                "stepClassName": "org.tweetwallfx.vdz.steps.FlipOutScheduleToday"
            },
            {
                "stepClassName": "org.tweetwallfx.vdz.steps.ShowSchedule"
            },
            {
                "stepClassName": "org.tweetwallfx.controls.steps.PauseStep",
                "config": {
                    "amount": 1,
                    "unit": "SECONDS"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.vdz.steps.UpdateScheduleResults"
            },
            {
                "stepClassName": "org.tweetwallfx.vdz.steps.FlipOutTweets"
            }
        ]
    }
}
