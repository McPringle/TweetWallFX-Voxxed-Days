{
    "twitter": {
        "extendedMode": true
    },
    "tweetwall": {
        "query": "#vdz18 OR #voxxed OR #java",
        "title": "The JavaFX Tweetwall for Voxxed Days ZÃ¼rich 2018!",
        "stylesheetResource": "tweetwall.css"
    },
    "stepEngine": {
        "steps": [
            {
                "stepClassName": "org.tweetwallfx.vdz.steps.FlipInTweets"
            },
            {
                "stepClassName": "org.tweetwallfx.vdz.steps.FlipOutScheduleToday"
            },
            {
                "stepClassName": "org.tweetwallfx.vdz.steps.ShowSchedule"
            },
            {
                "stepClassName": "org.tweetwallfx.controls.steps.PauseStep",
                "config": {
                    "amount": 1,
                    "unit": "SECONDS"
                }
            },
            {
                "stepClassName": "org.tweetwall.devoxx.cfp.stepengine.steps.UpdateScheduleResults"
            },
            {
                "stepClassName": "org.tweetwallfx.vdz.steps.FlipOutTweets"
            }
        ],
        "dataProviderSettings": [
            {
                "dataProviderClassName": "org.tweetwallfx.tweet.stepengine.dataprovider.TweetStreamDataProvider",
                "config": {
                    "blockedTwitterUserScreenNames": [],
                    "historySize": 25,
                    "maxTweets": 7,
                    "minFollowersCount": 50
                }
            }
        ]
    },
    "devoxxCFP": {
        "baseUri": "https://cfp-vdz.exteso.com/api",
        "eventId": "VDZ18",
        "votingResultsUri": "https://cfp-vdz.exteso.com/api/voting/v1/top/talks"
    }
}
